<%= form_with(model: camp, local: true) do |form| %>
  <% if camp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(camp.errors.count, "error") %> prohibited this camp from being saved:</h2>

      <ul>
      <% camp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :curriculum_id %>
      <%= form.number_field :curriculum_id, id: :camp_curriculum_id, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :location_id %>
      <%= form.number_field :location_id, id: :camp_location_id,:class => "form-control" %>
    </div>
  </div>
  
   <div class="form-row">
    <div class="form-group col-md-4">
      <%= form.label :cost %>
      <%= form.text_field :cost, id: :camp_cost, :class => "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :time_slot %>
     <%= form.text_field :time_slot, id: :camp_time_slot, :class => "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :max_students %>
      <%= form.number_field :max_students, id: :camp_max_students, :class => "form-control" %>
    </div>
  </div>


    <div class="form-row">
  <div class="form-group col-md-4">
      <%= form.label :start_date %>
      <%= form.date_select :start_date, id: :camp_start_date, :class => "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :camp_end_date, :class => "form-control" %>
    </div>
    </div>

  


  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active, id: :camp_active %>
  </div>
<br/>
  <div class="actions">
    <%= form.submit :Submit, class: 'btn btn-success' %>
  </div>
<% end %>
