
<div id="notice" class="alert alert-primary alert-dismissible fade show" role="alert">
  <strong><%= notice %> Enjoy your stay.</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<h1>Camps </h1>
<br/>
<h3><%=@count%> Add a <%= link_to 'New Camp', new_camp_path %></h3>
<% if @count == "" %>
<table class="table table-dark">
  <div class="table-responsive">
  <thead>
    <tr>
      <th>Curriculum Name</th>
      <th>Location</th>
      <th>Cost</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Time slot</th>
      <th>Max Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @camps.each do |camp| %>
    
      <tr>
        <td><%= link_to camp.curriculum.name, camp, :class=> "btn btn-light" %></td>
        <td><%= camp.location_id %></td>
        <td><%= camp.cost %></td>
        <td><%= camp.start_date.strftime("%m/%d/%y")%></td>
        <td><%= camp.end_date.strftime("%m/%d/%y") %></td>
        <td><%= camp.day_time(camp.time_slot) %></td>
        <td><%= camp.max_students %></td>
        <td><%= link_to 'Edit', edit_camp_path(camp), :class=> "btn btn-light" %></td>
        
    
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<% end %>


