<%= form_with(model: instructor, local: true) do |form| %>
  <% if instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

      <ul>
      <% instructor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, id: :instructor_first_name, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, id: :instructor_last_name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :bio %>
    <%= form.text_area :bio, id: :instructor_bio, :class => "form-control" %>
  </div>
  
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :email %>
      <%= form.text_field :email, id: :instructor_email, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :phone %>
      <%= form.text_field :phone, id: :instructor_phone, :class => "form-control" %>
    </div>
  </div>


  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active, id: :instructor_active %>
  </div>

<br/>

  <div class="actions">
    <%= form.submit :Submit, class: 'btn btn-success' %>
  </div>
  
  
<% end %>
