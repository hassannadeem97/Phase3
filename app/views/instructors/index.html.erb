<div id="notice" class="alert alert-success alert-dismissible fade show" role="alert">
  <strong><%= notice %> Enjoy your stay</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<h1>Instructors</h1>
<br/>

<h3>Add a <%= link_to 'New Instructor', new_instructor_path %></h3>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Bio</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.id %></td>
        <td><%= instructor.first_name %></td>
        <td><%= instructor.last_name %></td>
        <td><%= instructor.bio %></td>
        <td><%= instructor.email %></td>
        <td><%= instructor.phone %></td>
        <td><%= instructor.active %></td>
        <td><%= link_to 'Show', instructor, :class=> "btn btn-light" %></td>
        <td><%= link_to 'Edit', edit_instructor_path(instructor), :class=> "btn btn-light" %></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

