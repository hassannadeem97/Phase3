    <h3 class="card-header primary-color white-text">Curriculum Details</span></h3>
    <div class="card-body">

<p>
  <strong>Name:</strong>
  <%= @curriculum.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @curriculum.description %>
</p>

