<%= simple_form_for(@curriculum) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :name, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :min_rating, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :max_rating, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :description, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :active %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>