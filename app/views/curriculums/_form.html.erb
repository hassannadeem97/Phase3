    </div>
    <div class="form-group col-md-6">
      <%= form.label :max_rating %>
      <%= form.number_field :max_rating, id: :curriculum_max_rating, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :curriculum_description, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active, id: :curriculum_active %>
