<h5>Add a <%= link_to 'New curriculum', new_curriculum_path %></h5><br/>

<p id="notice"><%= notice %></p>

<% if @curriculums.empty? %>
  <h3>There are no curriculums in the system at this time</h3>
<% else %>
  <h3>Curriculums</h3><br/>

  <table class="table table-dark">
    <div class="table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ratings</th>
      <th>Times Used</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @curriculums.each do |curriculum| %>
      <tr>
        <td><%= link_to curriculum.name, curriculum, :class=>"btn btn-light" %></td>
        <td><%= curriculum.min_rating == 0 ? "Unrated" : curriculum.min_rating %> - <%= curriculum.max_rating %></td>
        <td><%= Camp.for_curriculum(curriculum.id).size %></td>
        <td><%= link_to 'Edit', edit_curriculum_path(curriculum), :class=>"btn btn-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
    <% end %>

