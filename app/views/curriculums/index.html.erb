<div id="notice" class="alert alert-info alert-dismissible fade show" role="alert">
  <strong><%= notice %> Enjoy your stay.</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<h1>Curriculums</h1>
<br>

<h3>Add a <%= link_to 'New Curriculum', new_curriculum_path %></h3>
<table class="table table-dark">
  <div class="table-responsive">
  <thead>
    <tr>
      <th scope="col">#ID</th>
      <th>Name</th>
      <th>Rating</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @curriculums.each do |curriculum| %>
      <tr>
        <td><%= curriculum.id %></td>
        <td><%= curriculum.name %></td>
        <td><%= curriculum.min_rating %> - <%= curriculum.max_rating %></td>
        <td><%= curriculum.description %></td>
        <td><%= curriculum.active %></td>
        <td><%= link_to 'Show', curriculum, :class=> "btn btn-light" %></td>
        <td><%= link_to 'Edit', edit_curriculum_path(curriculum), :class=> "btn btn-light" %></td>
        <td><%= link_to 'Destroy', curriculum, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


