  <div class="row">

  <div class= "col s12">
  <p id="notice"><%= notice %></p>
  <h3><%= state %> Locations</h3>

  <table class="table table-dark">
    <div class="table-responsive">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Max Capacity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% locations.each do |location| %>
        <tr>
          <td><%= link_to location.name, location, :class=>"btn btn-light" %></td>
          <td><%= render :partial => "partials/address_info", locals: {location: location} %></td>
          <td><%= location.max_capacity %></td>
          <td><%= link_to 'Edit', edit_location_path(location), :class=>"btn btn-light" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <span class="paginate">
    <%= will_paginate locations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>