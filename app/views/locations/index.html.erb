<div id="notice" class="alert alert-dark alert-dismissible fade show" role="alert">
  <strong><%= notice %> Enjoy your stay.</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>


<h1>Locations</h1>
<br>

<h3>Add a <%= link_to 'New Location', new_location_path %></h3>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#ID</th>
      <th>Name</th>
      <th>Street 1</th>
      <th>Street 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Max capacity</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.id %></td>
        <td><%= location.name %></td>
        <td><%= location.street_1 %></td>
        <td><%= location.street_2 %></td>
        <td><%= location.city %></td>
        <td><%= location.state %></td>
        <td><%= location.zip %></td>
        <td><%= location.max_capacity %></td>
        <td><%= location.active %></td>
        <td><%= link_to 'Show', location, :class=> "btn btn-light" %></td>
        <td><%= link_to 'Edit', edit_location_path(location), :class=> "btn btn-light" %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


