<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :name, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :street_1, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :street_2, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :city, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :state, label_html: { class: 'active' }, collection: Location::STATES_LIST, include_blank: true, :input_html => { :class => 'form-control' } %>
      <%= f.input :zip, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :max_capacity, label_html: { class: 'active' }, :input_html => { :class => 'form-control' } %>
      <%= f.input :active %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
    
  </div>
  <br/>
    <br/>
<% end %>

  